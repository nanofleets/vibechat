# Development Dockerfile
FROM golang:1.25.1-alpine

WORKDIR /app

# Install air for hot reloading
RUN go install github.com/air-verse/air@latest

# Copy go mod files
COPY go.mod go.sum* ./
RUN go mod download

# Copy source code
COPY . .

# Expose port
EXPOSE 8080

# Command will be overridden by docker-compose
CMD ["air", "-c", ".air.toml"]
